generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}



/////////////////////////////////////////////////////////
// ENUMS
/////////////////////////////////////////////////////////

enum UserStatus {
  pending
  active
  rejected
  blocked
  unverified
}

enum Gender {
  male
  female
  other
}

enum PersonType {
  student
  employee
}

enum Branch {
  CSE
  ECE
  EE
  ME
  CE
  CSE_AI
  CSE_DS
  EEE
  AS
}

enum Designation {
  PROFESSOR
  ASSISTANT_PROFESSOR
  GUEST
  LAB_ASSISTANT
}

enum LoginMethod {
  PASS_EMAIL
  PASS_USERNAME
  PASS_MOBILE
  OTP_SMS
  OTP_WHATSAPP
  OTP_EMAIL
  GOOGLE_EMAIL
  GOOGLE_SUB
}

/////////////////////////////////////////////////////////
// USER
/////////////////////////////////////////////////////////

model User {
  id String @id @default(uuid())

  fullName     String
  email        String @unique
  password String

  googleSub     String?
  mobile        String?
  profilePicUrl String?
  username      String? @unique

  roles      String[]   @default([])
  status     UserStatus @default(pending)
  personType PersonType

  gender Gender?
  dob    DateTime?

  address          Json?
  emergencyContact Json?
  socialLinks      Json?
  notifications    Json?

  // âœ… Access
  allow        String[]   @default([])
  deny         String[]   @default([])
  allowExtra   String[]   @default([])
  approvedBy   String?
  approvedAt   DateTime?
  rejectedBy   String?
  rejectedAt   DateTime?
  rejectReason String?

  // âœ… RELATIONS
  student Student?
  teacher Teacher?
  refreshSessions RefreshSession[]  

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
}

/////////////////////////////////////////////////////////
// STUDENT
/////////////////////////////////////////////////////////

model Student {
  userId String @id

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  regNo  String @unique
  rollNo String?

  branch   Branch
  semester Int?

  admissionYear Int
  passingYear   Int?

  isLateralEntry Boolean @default(false)

  guardian Json?
  hostel   Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([branch, semester])
}

/////////////////////////////////////////////////////////
// TEACHER
/////////////////////////////////////////////////////////

model Teacher {
  userId String @id

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  employeeId    String? @unique
  officialEmail String? @unique

  designation Designation?
  department  Branch?

  roomNo String?
  office Json?

  joiningDate     DateTime?
  experienceYears Int? @default(0)
  specialization  String?
  skills          String[] @default([])
  education       Json?

  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([department])
}

/////////////////////////////////////////////////////////
// REFRESH SESSION
/////////////////////////////////////////////////////////

model RefreshSession {
  id String @id @default(uuid())

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  refreshTokenHash String

  createdAt DateTime @default(now())
  expiresAt DateTime

  loginMethod LoginMethod
  loginAt DateTime @default(now())

  ip        String?
  userAgent String?
  device    String?

  country String?
  state   String?
  city    String?

  rotatedFromId String?
  rotatedFrom   RefreshSession?  @relation("Rotation", fields: [rotatedFromId], references: [id])
  rotatedTo     RefreshSession[] @relation("Rotation")

  isRevoked    Boolean @default(false)
  revokedAt    DateTime?
  revokeReason String?

  lastUsedAt DateTime?

  @@index([userId, isRevoked])
  @@index([expiresAt])
  @@index([userId, loginMethod])
}
///////////////////////////////////////////////////////////
// NOTIFICATION LOG (Sending Layer)
///////////////////////////////////////////////////////////

enum NotificationChannel {
  EMAIL
  SMS
  WHATSAPP
  PUSH_WEB
  PUSH_APP
  IN_APP
}

enum NotificationStatus {
  PENDING
  SCHEDULED    // ðŸ‘ˆ Added: For future tasks
  SENT
  DELIVERED
  READ
  FAILED
  CANCELED     // ðŸ‘ˆ Added: If user cancels a scheduled job
}

model NotificationLog {
  id          String   @id @default(uuid())

  // 1. Identity & Grouping
  userId      String?  @map("user_id") // Optional: specific user
  recipient   String   // The Email, Phone, or Token
  batchId     String?  // ðŸ‘ˆ CRITICAL: Links 10k emails to 1 "Campaign"

  // 2. Core Details
  channel     NotificationChannel
  status      NotificationStatus @default(PENDING)
  priority    String?  @default("normal") // low, normal, high

  // 3. Content (Store generic data here)
  title       String?
  content     String?  // SMS/Push body
  metadata    Json?    // ðŸ‘ˆ Store Template ID, Context Variables, IP, Device Info here

  // 4. Provider Info
  provider          String?  // "AWS SES", "Twilio"
  providerId        String?  // The ID given by AWS/Twilio (for webhooks)
  error             String?  // Error message if failed
  retryCount        Int      @default(0)

  // 5. Lifecycle Timestamps
  createdAt    DateTime @default(now())
  scheduledAt  DateTime? // ðŸ‘ˆ Added: When should this be sent?
  sentAt       DateTime? // When it actually left
  deliveredAt  DateTime?
  readAt       DateTime?
  clickedAt    DateTime?

  // Indexes for high-speed querying
  @@index([recipient])  // "Show all emails sent to Rahul"
  @@index([batchId])    // "Show analytics for Diwali Campaign"
  @@index([status])     // "Show all FAILED emails"
  @@index([scheduledAt]) // "Find jobs that need to run now"
  
  @@map("notification_logs")
}
